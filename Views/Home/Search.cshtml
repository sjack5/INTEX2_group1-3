<h2>Records</h2>
<button class="btn btn-primary mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#filtersCollapse" aria-expanded="false" aria-controls="filtersCollapse">
    Filters
</button>
<div class="collapse" id="filtersCollapse">
    <div class="card card-body">
        <div class="row">
            <div class="col-md-3">
                <label for="sex">Sex:</label>
                <select class="form-control" id="sex">
                    <option value="">Select a sex</option>
                    @foreach (Burialmain b in Model.Burials)
                    {
                        <option value="@b.Sex">@b.Sex</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="burialDepth">Burial Depth:</label>
                <select class="form-control" id="burialDepth">
                    <option value="">Select a depth</option>
                    @foreach (Burialmain b in Model.Burials)
                    {
                        <option value="@b.Depth">@b.Depth</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="estimateStature">Estimate Stature:</label>
                <select class="form-control" id="estimateStature">
                    <option value="">Select a stature</option>
                    @foreach (Burialmain b in Model.Burials)
                    {
                        <option value="@b.Length">@b.Length</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="ageAtDeath">Age at Death:</label>
                <select class="form-control" id="ageAtDeath">
                    <option value="">Select an age</option>
                    @foreach (Burialmain b in Model.Burials)
                    {
                        <option value="@b.Ageatdeath">@b.Ageatdeath</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="headDirection">Head Direction:</label>
                <select class="form-control" id="headDirection">
                    <option value="">Select a direction</option>
                    @foreach (Burialmain b in Model.Burials)
                    {
                        <option value="@b.Headdirection">@b.Headdirection</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="burialId">Burial ID:</label>
                <select class="form-control" id="burialId">
                    <option value="">Select a burial ID</option>
                    @foreach (Burialmain b in Model.Burials)
                    {
                        <option value="@b.Burialid">@b.Burialid</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="hairColor">Hair Color:</label>
                <select class="form-control" id="hairColor">
                    <option value="">Select a color</option>
                    @foreach (Burialmain b in Model.Burials)
                    {
                        <option value="@b.Haircolor">@b.Haircolor</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="presenceFaceBundle">Presence of Face Bundle:</label>
                <select class="form-control" id="presenceFaceBundle">
                    <option value="">Select an option</option>
                    @foreach (Burialmain b in Model.Burials)
                    {
                        <option value="@b.Facebundles">@b.Facebundles</option>
                    }
                </select>
            </div>
            <!-- Add more dropdown filters in the same manner -->
            <button class="btn btn-primary btn-sm mt-3" type="submit">Submit</button>
        </div>
    </div>
</div>
