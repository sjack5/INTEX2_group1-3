    <h2>Textile Information:</h2>
    @foreach (var textile in Model.Textiles)
    {
        <div>
            <table class="table">
                <thead>
                    @textile.Id
                                <tr>
                                    <th>Locale</th>
                                    <th>Textile Id</th>
                                    <th>Description</th>
                                    <th>Burial Number</th>
                                    <th>Estimated Period</th>
                                    <th>Sample Date</th>
                                    <th>Photographed Date</th>
                                    <th>Direction</th>
                                </tr>
                            </thead>
                <tbody>
                    
                    <tr>
                        <td>@textile.Locale</td>
                        <td>@textile.Textileid</td>
                        <td>@textile.Description</td>
                        <td>@textile.Burialnumber</td>
                        <td>@textile.Estimatedperiod</td>
                        <td>@textile.Sampledate</td>
