    <p>@Model.BurialMain.Id</p>
    <div>
        <table class="table">
            <thead>
                @Model.BurialMain.Id
                <tr>
                    <th>@Model.BurialMain.Squarenorthsouth</th>
                    <th>@Model.BurialMain.Headdirection</th>
                    <th>@Model.BurialMain.Sex</th>
                    <th>@Model.BurialMain.Northsouth</th>
                    <th>@Model.BurialMain.Depth</th>
