@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<link rel="stylesheet" href="~/Squadfree/Squadfree/assets/vendor/bootstrap/css/bootstrap.css/bootstrap.min.css" />
<link rel="stylesheet" href="/Squadfree//Squadfree/assets/css/style.css" />
<script src="~/Squadfree/Squadfree/assets/dist/jquery.min.js"></script>
<script src="~/Squadfree/Squadfree/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/Squadfree/Squadfree/assets/js/main.js" asp-append-version="true"></script>


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <nav id="navbar" class="navbar">
            <li>
                <a class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li>
                <a class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        </nav>
        }
    </ul>
